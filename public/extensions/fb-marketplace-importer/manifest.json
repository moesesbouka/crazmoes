{
  "manifest_version": 3,
  "name": "FB Marketplace Importer - Crazy Moe's",
  "version": "1.2.4",
  "description": "Backup your Facebook Marketplace inventory to prevent data loss",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/marketplace/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace/you/*"],
      "js": ["content-importer.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-graphql-interceptor.js"],
      "matches": ["https://www.facebook.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
